extends layouts/layout

block contenido
    main.contenedor
        form(action=`/vacantes/editar/${vacante.url}` method="POST" class="default-form")

            h3 Información General 
            div.campo
                label(for="") Título 
                input(type="text" name="titulo" placeholder="Ej: React Developer" value=vacante.titulo)

            div.campo
                label(for="") Empresa 
                input(type="text" name="empresa" placeholder="Ej: Empresa Contrata" value=vacante.empresa)

            div.campo
                label(for="") Ubicación 
                input(type="text" name="ubicacion" placeholder="Ej: México o Remoto" value=vacante.ubicacion)

            div.campo
                label(for="") Salario (USD)
                input(type="text" name="salario" placeholder="Ej: 500 USD" value=vacante.salario)

            div.campo
                label(for="") Contrato 
                select(name="contrato")
                    option(value="" disabled selected) - Selecciona - 
                    option(value="Freelance" selected=vacante.contrato=="Freelance" ? true : false) Freelance
                    option(value="Tiempo completo" selected=vacante.contrato=="Tiempo completo" ? true : false) Tiempo completo
                    option(value="Medio Tiempo" selected=vacante.contrato=="Medio Tiempo" ? true : false) Medio Tiempo
                    option(value="Por proyecto" selected=vacante.contrato=="Por proyecto" ? true : false) Por proyecto

            h3 Descripción del puesto 

            div.campo.descripcion
                label(for="") Descripción 
                input(type="hidden" id="x" name="descripcion" value= vacante.descripcion)
                trix-editor(input="x")

            h3 Conocimientos 
            h2=vacante.contrato
            ul.lista-conocimientos
                each skill in skills
                    li= skill

            
            div.campos.centrar-horizontal
                input(type="hidden" name="skills" id="skills" value=skillsDeVacante)
                input(type="submit" value="Editar" class="btn btn-azul")       
